<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             x:Class="Scheduler.Desktop.App">
    <Application.Styles>
        <styling:FluentAvaloniaTheme />

        <StyleInclude Source="/Styles/OptionsDisplayItemStyles.axaml" />
        <Style Selector="MenuFlyoutPresenter /template/ Border#LayoutRoot">
            <Setter Property="Background">
                <SolidColorBrush Color="{DynamicResource SolidBackgroundFillColorBase}" Opacity="0.725" />
            </Setter>
        </Style>
    </Application.Styles>
</Application>